        <a
          href="/resume.pdf"
          target="_blank"
          rel="noopener noreferrer"
          class="mt-2 px-4 py-3 bg-blue-700 hover:bg-blue-800 text-white font-medium rounded-lg transition-all text-center"
        >
          Download Resume
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Theme Toggle Functionality
  const themeToggle = document.getElementById("theme-toggle");
  const html = document.documentElement;

  // Check for saved theme preference or default to light
  const currentTheme = localStorage.getItem("theme") || "light";
  if (currentTheme === "dark") {
    html.classList.add("dark");
  }

  themeToggle?.addEventListener("click", () => {
    html.classList.toggle("dark");
    const newTheme = html.classList.contains("dark") ? "dark" : "light";
    localStorage.setItem("theme", newTheme);
  });

  // Mobile Menu Toggle
  const mobileMenuBtn = document.querySelector('[data-ref="mobile-menu-btn"]');
  const mobileMenu = document.querySelector('[data-ref="mobile-menu"]');
  const firtLine = document.querySelector(
    '[data-ref="mobile-menu-btn__first-line"]'
  );
  const secondLine = document.querySelector(
    '[data-ref="mobile-menu-btn__second-line"]'
  );
  const thirdLine = document.querySelector(
    '[data-ref="mobile-menu-btn__third-line"]'
  );

  mobileMenuBtn?.addEventListener("click", () => {
    mobileMenu?.classList.toggle("hidden");
    firtLine?.classList.toggle("rotate-45");
    firtLine?.classList.toggle("scale-x-[1.05]");
    secondLine?.classList.toggle("opacity-0");
    secondLine?.classList.toggle("translate-x-6");
    thirdLine?.classList.toggle("-rotate-45");
    thirdLine?.classList.toggle("scale-x-[1.05]");
  });
</script>
